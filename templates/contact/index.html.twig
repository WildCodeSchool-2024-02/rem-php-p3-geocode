{% extends 'base.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}
    <div class="return-arrow">
        <a href="{{ path('home_index') }}">{{ ux_icon('cil:arrow-left') }}</a>
    </div>
    <div class="contact-logo-container">
        <img class="contact-logo" src="{{ asset('images/logol.png') }}" alt="">
        <p class="logo-name">Géocode</p>
    </div>
    <h1>Liste des messages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>Expéditeur : {{ message.sender.firstname }} {{ message.sender.lastname }}<br>
                {{ message.content }}</td>
                <td>
                    <a href="{{ path('contact_message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('contact_message_delete', {'id': message.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
